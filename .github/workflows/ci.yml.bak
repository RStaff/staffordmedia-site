name: CI
on:
  pull_request:
    branches: [ "*" ]

jobs:
  build-and-test:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: ğŸ”§ Setup Node
        uses: actions/setup-node@v4
        with:
          node-version: "22.x"
          cache: npm

      - name: ğŸ“¦ Install deps (workspaces)
        run: |
          if [ ! -f package-lock.json ]; then
            npm install --workspaces
          fi
if [ ! -f package-lock.json ]; then
            npm install --workspaces
          fi
          npm ci
      - name: ğŸ­ Install Playwright (browsers & libs)
        run: npm run -w website playwright:install

      - name: ğŸ—ï¸ Build (production)
        run: npm run -w website build

      - name: âœ… E2E tests
        run: npm run -w website test:e2e
