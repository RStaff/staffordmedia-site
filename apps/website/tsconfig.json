{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": [
        "src/*",                // local app src
        "./*",                  // local app root (if some files live alongside src)
        "../../apps/website/src/*"  // explicit absolute-to-root fallback for CI
      ]
    },
    // keep JSX/strict/etc from parent; we only pin alias + resolver here
    "types": []
  },
  "include": [
    "app",
    "components",
    "lib",
    "src",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
