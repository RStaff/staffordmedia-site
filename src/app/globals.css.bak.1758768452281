/* __HERO_FIX__ */
img[src$="/abando-icon.svg"],
img[src*="abando-icon"],
[data-hero-badge], .hero-badge, .floating-badge, .hero-floating, .badge-floating { display:none !important; visibility:hidden !important; }

.logo-rail, [data-logo-rail], .brand-logos-rail, .logo-strip { display:none !important; }

.overlay, .overlay-card, .overlay-badge { display:none !important; }

/* __HERO_CLEANUP__ */
/* Hide the decorative hero badge (truck / abando icon), regardless of how it's rendered) */
img[src$="/abando-icon.svg"],
img[src*="abando-icon"],
[data-hero-badge],
.hero-badge,.floating-badge,.hero-floating,.badge-floating { 
  display:none !important; 
  visibility:hidden !important; 
}

/* Hide the empty logo rail / strip placeholder */
.logo-rail,[data-logo-rail],.brand-logos-rail,.logo-strip {
  display:none !important;
}

/* Defensive: hide any generic hero overlay container if itâ€™s just a visual card blob */
.hero-overlay,.overlay,.overlay-card,.overlay-badge {
  pointer-events:none;
  opacity:0 !important;
}

/* __HERO_BADGE_NUKE__ */
span:has(> img[src*="abando-icon"]),
span:has(> img[src$="/abando-icon.svg"]),
span:has(> img[src*="hero-graphic"]),
img[src*="abando-icon"],
img[src*="hero-graphic"],
[data-hero-badge], .hero-badge, .floating-badge, .hero-floating, .badge-floating {
  display:none !important; visibility:hidden !important; opacity:0 !important; pointer-events:none !important;
}

/* __HERO_BADGE_SUPERNUKE__ */
/* Direct asset cases */
img[src*="abando-icon"], img[src*="hero-graphic"]{
  display:none !important; visibility:hidden !important; opacity:0 !important; pointer-events:none !important;
}
/* Next optimizer URLs like /_next/image?url=%2Fabando-icon.svg */
img[src*="/_next/image"][src*="url=%2Fabando-icon"],
img[src*="/_next/image"][src*="url=%2Fhero-graphic"]{
  display:none !important; visibility:hidden !important; opacity:0 !important; pointer-events:none !important;
}
/* Likely wrappers, kill them too */
span:has(> img[src*="abando-icon"]),
span:has(> img[src*="/_next/image"][src*="url=%2Fabando-icon"]),
span:has(> img[src*="hero-graphic"]),
span:has(> img[src*="/_next/image"][src*="url=%2Fhero-graphic"]){
  display:none !important; visibility:hidden !important; opacity:0 !important; pointer-events:none !important;
}
/* Generic overlays / floating badges */
.hero-overlay,.overlay,.overlay-card,.overlay-badge,.floating-badge,.badge-floating,.hero-floating{
  display:none !important; visibility:hidden !important; opacity:0 !important; pointer-events:none !important;
}
/* Logo rails / strips that were empty */
.logo-rail,[data-logo-rail],.brand-logos-rail,.logo-strip{ display:none !important; }

/* __HERO_FINAL_NUKE__ */
img[src*="abando-icon"],img[src*="hero-graphic"],
img[src*="/_next/image"][src*="url=%2Fabando-icon"],
img[src*="/_next/image"][src*="url=%2Fhero-graphic"],
.hero-badge,.floating-badge,.badge-floating,.hero-floating,
.hero-overlay,.overlay,.overlay-card,.overlay-badge { display:none !important; visibility:hidden !important; opacity:0 !important; pointer-events:none !important; }
